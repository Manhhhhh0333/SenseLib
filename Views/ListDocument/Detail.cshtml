                                        <li><b class="arrow-up"></b><a data-toggle="tab" href="#sectionC">Gủi đánh giá</a></li>
                                    </ul>
                                    <div class="tab-content">
                                        @foreach (var comment in Model.Comments
                                        .Where(c => c.DocumentID == Model.Document.DocumentID)
